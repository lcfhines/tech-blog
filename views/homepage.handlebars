{{#if loggedIn}}
<section class="container">
    <h3>Recent Posts</h3>
    <section class="flex-row justify-center">
        {{#each posts as |post|}}
        <div class="card">
            <h3><a href="/posts/{{id}}">{{title}}</a></h3>
            <div class="card-body">
                {{contents}}
            </div>
        </div>
        {{/each}}
    </section>
</section>
 {{/if}}