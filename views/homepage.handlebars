<section class="container">
    <h3>Recent Posts</h3>
    <section class="flex-row justify-center">
        {{#each posts as |post|}}
        <div class="post-card">
            <h3 class="post-title"><a href="/post/{{id}}">{{title}}</a></h3>
            <h4 class="post-date">{{format_date date_created}}</h4>
            {{!-- <div class="card-body">
                {{contents}}
            </div> --}}
        </div>
        {{/each}}
    </section>
</section>
